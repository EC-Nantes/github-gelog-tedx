package org.centrale.objet.WoE;

/**
 *
 * @author vdufo
 */
public class PeauDeBanane extends Nourriture implements Utilisable{

    public PeauDeBanane(boolean etat, Point2D pos, boolean t) {
        super(etat, pos, t,20,3);
    }
    
    public PeauDeBanane(){
        super(false,new Point2D(0,0), false,20,3);
    }
    /**
     * Méthode qui retire 20 au pourcentage de parade au personnage qui mange la peau de banane
     * @param p Personnage qui prend la peau de banane
     * @param c Numéro du tour de jeu auquel on active l'objet
     */
    @Override
    public void activer(Personnage p,int c){
        p.setPtPar(p.getPtPar()-this.getPoint());
        this.setCompteur(c);
    }
    
    /**
     * cette methode permet de connaitre la classe de l'instance (ici Peau de Banane)
     * @return 
     */
    @Override
    public String nomClasse(){
        return "Peau de banane";
    }
    
    /**
     * Méthode qui ajoute 20 au pourcentage de parade au personnage qui a mangé la peau de banane quand l'effet prend fin
     * @param p Personnage qui a pris la peau de banane
     */
    @Override
    public void retirer(Personnage p){
        p.setPtPar(p.getPtPar()+20);
    }
    
   /**
     * Methode communiquant au joueur qu'un objet a ete ramasse et qu'il peut l'utiliser
     */
    @Override
    public void objetRamasse(){
        System.out.println("Vous avez ramasse un coca qui est maintenant dans votre inventaire.");
        System.out.println("Vous pouvez l'utiliser à tout moment");
    }
}
