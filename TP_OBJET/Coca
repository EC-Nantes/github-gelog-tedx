package org.centrale.objet.WoE;

/**
 *
 * @author vdufo
 */
public class Coca extends Nourriture implements Utilisable{

    public Coca(boolean etat, Point2D pos, boolean t) {
        super(etat, pos, t,5,2);
    }

    public Coca(){
        super(false,new Point2D(0,0),false,5,2);
    }
    /**
     * Méthode qui ajoute 5 dégâts d'attaque au personnage qui prend du coca
     * @param p Personnage qui prend le coca
     */
    @Override
    public void activer(Personnage p,int c){
        p.setDegAtt(p.getDegAtt()+ this.getPoint());
        this.setCompteur(c);
    }
    
    @Override
    public String nomClasse(){
        return "Coca";
    }
    
    /**
     * Méthode qui retire 5 dégâts d'attaque au personnage qui a pris du coca après que l'effet ait pris fin
     * @param p Personnage qui a pris le coca
     */
    @Override
    public void retirer(Personnage p){
        p.setDegAtt(p.getDegAtt()-5);
    }
    
    @Override
    public void objetRamasse(){
        System.out.println("Vous avez ramasse un coca qui est maintenant dans votre inventaire.");
        System.out.println("Vous pouvez l'utiliser à tout moment");
    }
}
