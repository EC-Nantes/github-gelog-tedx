        if (this.connection != null) {
            String query = "SELECT id_joueur FROM Joueur WHERE pseudo=?";
            PreparedStatement stmt = this.connection.prepareStatement(query);
            stmt.setString(1, login);
            ResultSet res = stmt.executeQuery();
