        long debut=System.nanoTime();
        for (int i =0; i<maListePerso1.size() ;i++){
            S+=maListePerso1.get(i).getPtVie();
        }
        long fin=System.nanoTime();
        System.out.println("Point de vie totale: "+S);
        System.out.println("temps d'execution: "+(fin-debut));
        
