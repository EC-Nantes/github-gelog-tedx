        for (int i =0; i<100 ;i++){
           Personnage archer = new Personnage("perso" +i, 1,alea.nextInt(20),alea.nextInt(20),alea.nextInt(20),alea.nextInt(20),alea.nextInt(20), new Point2D(alea.nextInt(20),alea.nextInt(20)));
