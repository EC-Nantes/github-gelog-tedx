public class PotionSoin extends Objet{
    private int ptV;
    
    public PotionSoin(int Pdurabilite, boolean etat, int niveau,int pV){
        super(Pdurabilite, etat, niveau);
        this.ptV=pV;
    }
    
    public void glouglou(){
        
        setPdurabilite(0);
        
        if(getNiveau()==1){
            setPtVie(getptVie()+5);
        }
        else if(getNiveau()==2){
            setPtVie(getptVie()+10);
        }
        else (getNiveau()==3){
            setPtVie(getptVie()+15);
        }
        
    }
}
